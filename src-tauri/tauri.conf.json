{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Autoware Build GUI",
    "version": "1.0.3"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/64x64-AWF.png", "icons/256x256-AWF.png"],
      "identifier": "com.leodrive.ai",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "resources": [],
      "shortDescription": "",
      "targets": "deb",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis": {
          "installerIcon": "./icons/icon.ico"
        }
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "scheme": "https",
          "domain": "tauri.localhost",
          "windows": ["main"],
          "plugins": ["app", "shell", "os", "event", "window", "dialog"]
        }
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "title": "Splash Screen",
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "width": 800,
        "height": 590,
        "label": "splash",
        "url": "splash.html",
        "alwaysOnTop": true
      },
      {
        "fullscreen": false,
        "title": "Autoware Build GUI",
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "height": 760,
        "width": 1080,
        "label": "main"
      }
    ]
  }
}
